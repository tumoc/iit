@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using System.Configuration

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Hotel hotel = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
    Menu menu = ViewBag.Menu ?? new Menu();
    List<Slider> sliders = CommentController.GetListSlider(Request.Cookies["LanguageID"].Value, menu.ID);
    List<Article> articles = CommentController.GetArticles(menu.ID);
    //var publicKey = ConfigurationManager.AppSettings["ReCaptcha.PublicKey"].ToString();
}

<main class="main">
    <section class="banner">
        <div class="container">
            <div class="banner-content">
                <div class="banner-title">
                    <h1 class="banner-title">
                        @menu.MetaTitle
                    </h1>

                </div>

            </div>

        </div>
    </section>

    <section class="service  pd-100">
        <div class="bg-service"></div>
        <div class="container">
            <div class="section-title">
                <h2 class="subtitle add-font">
                    @Html.Raw(menu.MetaDescription)
                </h2>
                <div class="sectitle">
                    @Html.Raw(menu.Description)
                </div>
            </div>
            <div class="service-wrap">
                @foreach (var item in articles)
                {
                    <div class="service-wrap__item mb-0">
                        <div class="row">
                            <div class="col-lg-7 column-image">
                                <figure class="image">
                                    <a href="/@item.MenuAlias/@item.ID/@item.Alias">
                                        <img src="@item.Image" alt="">
                                    </a>
                                    
                                </figure>
                            </div>
                            <div class="col-lg-5">
                                <div class="desc">
                                    <h3 class="service-title">
                                        @item.Title
                                    </h3>
                                    <p>
                                        @Html.Raw(item.Description)
                                    </p>
                                    <a href="/@item.MenuAlias/@item.ID/@item.Alias" class="link-detail">
                                        learn more <i class="fa-solid fa-chevron-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

