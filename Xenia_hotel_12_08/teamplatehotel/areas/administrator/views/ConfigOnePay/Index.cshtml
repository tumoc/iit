@model ProjectLibrary.Database.PaymentConfigOnePay
@{
    Layout = "/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}

<div id="jtable-main-container"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jtable-main-container').jtable({
            title: '@ViewBag.Title',
            paging: true, //Enable paging
            pageSize: 20, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            multiselect: true, //Allow multiple selecting
            selectingCheckboxes: true, //Show checkboxes on first column
            columnResizable: false, //Actually, no need to set true since it's default
            columnSelectable: true, //Actually, no need to set true since it's default
            saveUserPreferences: false, //Actually, no need to set true since it's default
            actions: {
                listAction: '@Url.Action("List", "ConfigOnePay")',
                deleteAction: '@Url.Action("Delete", "ConfigOnePay")',
                updateAction: '@Url.Action("Edit", "ConfigOnePay")',
                createAction: '@Url.Action("Create", "ConfigOnePay")'
            },
            fields: {
                PaymentConfigOnePayID: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                MethodName: {
                    title: '@Html.DisplayNameFor(c=>c.MethodName
                                )',
                    width: '10%',
                    inputClass: 'full-width',
                    sorting: false,
                },
                MerchantId: {
                    title: '@Html.DisplayNameFor(c=>c.MerchantId
                                )',
                    width: '10%',
                    inputClass: 'full-width',
                    sorting: false,
                },

                AccessCode: {
                    title: '@Html.DisplayNameFor(c=>c.AccessCode)',
                    width: '10%',
                    inputClass: 'full-width',
                    sorting: false,
                },

                Hashcode: {
                    title: '@Html.DisplayNameFor(c=>c.Hashcode)',
                    width: '10%',
                    inputClass: 'full-width',
                    type: 'textarea',

                    sorting: false,
                },
                WebSite: {
                    title: '@Html.DisplayNameFor(c=>c.WebSite)',
                    width: '10%',
                    inputClass: 'full-width',
                    sorting: false,
                },
                NoiDia: {
                    title: '@Html.DisplayNameFor(c => c.NoiDia)',
                    width: '8%',
                    type: 'checkbox',
                    values: { 'false': 'Không', 'true': 'Có' },
                    defaultValue: 'true'
                },

                QuocTe: {
                    title: '@Html.DisplayNameFor(c => c.QuocTe)',
                    width: '8%',
                    type: 'checkbox',
                    values: { 'false': 'Không', 'true': 'Có' },
                    defaultValue: 'true'
                },
                //Type: {
                //    title: 'Cổng thanh toán',
                //    width: '10%',
                //    display: function (data) {
                //        if (data.record.Type == 1)
                //            return '<b> NỘI ĐỊA </b>';
                //        else if(data.record.Type == 2) {
                //            return '<b> QUỐC TẾ </b>';
                //        }
                //    }
                //},


            },
        });
        //Load data
        $('#jtable-main-container').jtable('load');
    });

</script>


