@using ProjectLibrary.Config
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using TeamplateHotel.Models
@using ProjectLibrary.Database
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();

    //ShowObject ShowHome = CommentController.Homeservice(Request.Cookies["LanguageID"].Value) ?? new ShowObject();
    //List<ShowObject> Shownew = CommentController.Newservice(Request.Cookies["LanguageID"].Value);
    List<Wine> wines = CommentController.GetWines(Request.Cookies["LanguageID"].Value);

}
<main class="main">

    <section class="banner">
        <div class="banner-main">

            <div class="banner-hide">
                <div class="banner-img full-height">
                        <img src="~/Assets/images/banner-2.jpg" alt="">
                </div>
                <div class="banner-content">
                    <div class="container">
                        <h1 class="title">
                            @GetLanguage.Language(Request.Cookies["LanguageID"].Value, "RELAX & REJUVENATE")
                        </h1>
                        <p class="subtitle">
                            @GetLanguage.Language(Request.Cookies["LanguageID"].Value, "XENIA'S SPA")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="spa-package mgy-25">
        <div class="container">
            <div class="row">
                @foreach (var item in wines)
                {
                    <div class="col-md-4">
                        <div class="inner">
                            <div class="image" style="width:200px">
                                <img src="@item.Image" alt="">
                                <h4 class="blog-title" style="text-align:center; margin-top:10px">
                                    @item.Title
                                </h4>
                            </div>
                            <div class="content">
                                <p class="blog-text">
                                    <div class="line-2">
                                        @GetLanguage.Language(Request.Cookies["LanguageID"].Value, "Made in"): @Html.Raw(item.Fromto)
                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>