                </div>

                <div class="room-wrap-1">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-6 col-xs-12 mg-bottom-30">
                                <div class="room_item-5" style="background-image: url(@item.Image);">

                                    <div class="img">
                                        <a href="/@item.MenuAlias/@item.ID/@item.Alias"><img src="@item.Image" alt="@item.Title"></a>
                                    </div>

                                    <div class="room_item-forward">
                                        <h2><a href="/@item.MenuAlias/@item.ID/@item.Alias">@item.Title</a></h2>
                                        <span class="price">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "Viewdetails") <i class="fa fa-angle-right" aria-hidden="true"></i></span>
                                    </div>

                                    <div class="room_item-back">
                                        <h3>@item.Title</h3>
                                        <a href="/@item.MenuAlias/@item.ID/@item.Alias" class="awe-btn awe-btn-13">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "Viewdetails")</a>
                                    </div>


                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-md-pull-10">
                <div class="sidebar">
                   
                    <div class="widget widget_categories">
                        <h5 class="widget-title">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "roomsuites")</h5>
                        <ul>
                            @foreach (var item in room)
                            {
                                <li>
                                    <a href="/@item.MenuAlias/@item.ID/@item.Alias">
                                        @item.Title
                                    </a>
                                </li>
                            }
